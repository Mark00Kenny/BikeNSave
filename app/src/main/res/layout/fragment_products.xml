<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/infodrop1"
        android:weightSum="13"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Opening -->
        <RelativeLayout
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/border"
            >

            <TextView
                android:id="@+id/textGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Best Bike Products"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <!-- End of Title -->
        <!-- Start of Grid for Layout-->
        <GridLayout
            android:id="@+id/mainGrid"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="14dp"


            >

            <!-- Row 1 -->

            <!-- Column 1 -->

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="-30dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/smarthalo"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <!-- Column 2   SmartHalo -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1.19"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <!-- Product Title-->
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="20dp"
                        android:text="Smart Halo"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Informatiion on Product-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:paddingTop="10dp"
                        android:text="•Smarthalo is the number one companion for your bike. Smarthalo offers a GPS route planner to help plan all your trips.\n\n•Acting as a bike alarm SmartHalo provides a detterant to all criminals by emitting a 100 decibel alarm if someone meddles with your bike while you are not in the vicinity of its bluetooth field.\n\n•RRP €150"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                    <!-- Clickable Link to website-->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="@string/smarthalo"
                        android:textAlignment="center"
                        android:id="@+id/smarthalowebsite"
                        android:autoLink="all"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Row 2 Kryptonite Bike Lock -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="-30dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
