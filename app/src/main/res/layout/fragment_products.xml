                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/kryptonite"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <!-- Column 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1.19"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <!-- Product Title-->
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="22dp"
                        android:text="Kryptonite"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Informatiion on Product-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:paddingTop="10dp"
                        android:text="•Kryptonite are regarded as the best manufacturer of bike locks worldwide. Their U lock bike is near impossible to pick and needs an electric saw to cut through.\n\n•If your bike is stolen while a Kryptonite lock is registered to your account, the company will cover the cost of your bike!\n\n•RRP €100"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                    <!-- Clickable Link to website-->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="@string/kryptonite"
                        android:textAlignment="center"
                        android:id="@+id/kryptonitewebsite"
                        android:autoLink="all"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Row 2 -->

            <!-- Row 2 Energiser Light -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
