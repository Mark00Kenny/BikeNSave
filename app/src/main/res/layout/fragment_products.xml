                        android:layout_width="140dp"
                        android:layout_height="22dp"
                        android:text="Adaptable Jacket"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Informatiion on Product-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:paddingTop="10dp"
                        android:text="•Windproof, water-resistant, and extremely breathable, this garment is perfect for chilly days but transforms into a jersey as the day warms up thanks to its removable sleeves.. \n\n• Gore’s Active Fit offers an exceptional level of comfort and freedom of movement, while reflective details keep you visible on the road.\n\n•RRP €120"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                    <!-- Clickable Link to website-->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="@string/jacket"
                        android:textAlignment="center"
                        android:autoLink="all"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

