                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">


                    <!-- Product Title-->
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="22dp"
                        android:text="Energiser Torch"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Informatiion on Product-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:paddingTop="10dp"
                        android:text="•The Energiser multi-purpose torch is my personal pick for a front facing bike light. The torch itself has 3 modes including low light, high beam and flash.\n\n•The torch is incredibly powerful and is run by AA batteries which prevents the need to constantly charge your light before a journey.\n\n•RRP €20"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                    <!-- Clickable Link to website-->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="@string/energiserweb"
                        android:textAlignment="center"
                        android:autoLink="all"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Row 2 Lumos Bike Helmet -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
